<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.temlog.user.dao.UserDAO">
	<select id="selectUserByLoginIdAndPassword" parameterType="map" resultType="com.temlog.user.model.User">
		SELECT
			`id`
			, `loginId`
			, `password`
			, `createdAt`
			, `updatedAt`
		FROM
			`user`
		WHERE
			`loginId` = #{loginId}
			AND `password` = #{password}
	</select>
	
	<select id="selectUserByUserId" parameterType="int" resultType="com.temlog.user.model.User">
		SELECT
			`id`
			, `loginId`
			, `password`
			, `createdAt`
			, `updatedAt`
		FROM
			`user`
		WHERE
			`id` = #{userId}
	</select>
	
	<select id="existLoginId" parameterType="string" resultType="boolean">
		SELECT
			COUNT(*)
		FROM
			`user`
		WHERE
			`loginId` = #{loginId}
	</select>
	
	<select id="matchedPassword" parameterType="string" resultType="boolean">
		SELECT
			COUNT(*)
		FROM
			`user`
		WHERE
			`password` = #{password}
	</select>
	
	<insert id="insertUser" parameterType="map">
		INSERT INTO `user`
		(
			`loginId`
			, `password`
			, `createdAt`
			, `updatedAt`
		)
		VALUES
		(
			#{loginId}
			, #{password}
			, NOW()
			, NOW()
		)
	</insert>
	
	<update id="updateUserPassword" parameterType="string">
		update `user`
		SET
			`password` = #{password}
			, `updatedAt` = NOW()
	</update>
	
	<delete id="deleteUser" parameterType="int">
		DELETE FROM
			`user`
		WHERE
			`id` = #{userId}
	</delete>
</mapper>