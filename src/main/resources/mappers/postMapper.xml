<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.temlog.post.dao.PostDAO">
	<insert id="insertPost" parameterType="map">
		INSERT INTO `post`
		(
			`userId`
			, `categoryId`
			, `subject`
			, `content`
			, `rating`
			, `purchaseNumber`
			, `purchaseDate`
			, `location`
			, `createdAt`
			, `updatedAt`
		)
		VALUES
		(
			#{userId}
			, #{categoryId}
			, #{subject}
			, #{content}
			, #{rating}
			, #{purchaseNumber}
			, #{purchaseDate}
			, #{location}
			, NOW()
			, NOW()
		)
	</insert>
	
	<select id="selectPostByPostIdAndUserId" parameterType="map" resultType="com.temlog.post.model.Post">
		SELECT
			`id`
			, `userId`
			, `categoryId`
			, `subject`
			, `content`
			, `rating`
			, `purchaseNumber`
			, `purchaseDate`
			, `location`
			, `createdAt`
			, `updatedAt`
		FROM
			`post`
		WHERE
			`id` = #{postId}
			AND `userId` = #{userId}
	</select>
	
	<select id="selectPostList" resultType="com.temlog.post.model.Post">
		SELECT
			`id`
			, `userId`
			, `categoryId`
			, `subject`
			, `content`
			, `rating`
			, `purchaseNumber`
			, `purchaseDate`
			, `location`
			, `createdAt`
			, `updatedAt`
		FROM
			`post`
		ORDER BY `id` DESC
	</select>
</mapper>