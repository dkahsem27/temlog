<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.temlog.image.dao.ImageDAO">
	<insert id="insertImage" parameterType="com.temlog.image.model.Image">
		INSERT INTO `image`
		(
			`postId`
			, `userId`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		)
		VALUES
		<foreach collection="imagePath" index="index" item="pathList" separator=",">
		(
			#{postId}
			, #{userId}
			, #{pathList}
			, NOW()
			, NOW()
		)
		</foreach>
	</insert>
	
	<update id="updateImage" parameterType="com.temlog.image.model.Image">
		UPDATE `image`
		SET
		<foreach collection="imagePath" index="index" item="pathList" separator=",">
			<!-- imagePath가 있을 때만 수정한다 -->
			<if test="imagePath != null">
			`imagePath` = #{pathList}
			</if>
			, `updatedAt` = NOW()
		WHERE
			`id` = #{postId}
		</foreach>
	</update>
	
	<select id="selectImageList" resultType="com.temlog.image.model.Image">
		SELECT
			`id`
			, `postId`
			, `userId`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`image`
	</select>
	
	<select id="selectImage" resultType="com.temlog.image.model.Image">
		SELECT
			`id`
			, `postId`
			, `userId`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`image`
	</select>

	<select id="selectImageByPostId" parameterType="int" resultType="com.temlog.image.model.Image">
		SELECT
			`id`
			, `postId`
			, `userId`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`image`
		WHERE
			`postId` = #{postId}
	</select>
	
	<select id="selectImageListByPostId" parameterType="int" resultType="com.temlog.image.model.Image">
		SELECT
			`id`
			, `postId`
			, `userId`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`image`
		WHERE
			`postId` = #{postId}
	</select>
</mapper>